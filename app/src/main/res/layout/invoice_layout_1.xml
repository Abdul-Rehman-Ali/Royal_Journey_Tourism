    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="950px"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <!-- Table Row 1: Header Row -->
        <TableRow
            android:background="@color/primaryColor"
            android:paddingVertical="8px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Person"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Count"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Price/-"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Total"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- Table Row 2: Data Row -->
        <TableRow android:paddingVertical="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8px"
                android:layout_weight="1"
                android:text="Adult"
                android:textSize="20px" />

            <TextView
                android:id="@+id/tvAdultCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8px"
                android:text="3"
                android:textAlignment="center"
                android:textSize="20px" />

            <TextView
                android:id="@+id/tvPricePerAdult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8px"
                android:text="43"
                android:textAlignment="center"
                android:textSize="20px" />

            <TextView
                android:id="@+id/tvTotalOnAdults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8px"
                android:text="100"
                android:textAlignment="center"
                android:textSize="20px" />
        </TableRow>

        <TableRow android:paddingVertical="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8px"
                android:layout_weight="1"
                android:text="Kid"
                android:textSize="20px" />

            <TextView
                android:id="@+id/tvKidsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8px"
                android:text="3"
                android:textAlignment="center"
                android:textSize="20px" />

            <TextView
